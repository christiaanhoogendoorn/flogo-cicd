{
  "name": "Timer",
  "type": "flogo:app",
  "version": "0.0.1",
  "appModel": "1.1.0",
  "description": "",
  "imports": [
    "github.com/project-flogo/contrib/activity/log",
    "github.com/project-flogo/contrib/trigger/timer",
    "github.com/project-flogo/flow"
  ],
  "triggers": [
    {
      "id": "timer",
      "ref": "#timer",
      "name": "Timer",
      "description": "Simple Timer trigger",
      "handlers": [
        {
          "settings": {
            "repeatInterval": "1s"
          },
          "action": {
            "ref": "#flow",
            "settings": {
              "flowURI": "res://flow:timer"
            }
          }
        }
      ]
    }
  ],
  "resources": [
    {
      "id": "flow:timer",
      "data": {
        "name": "Timer",
        "tasks": [
          {
            "id": "log_2",
            "name": "Log",
            "description": "Logs a message",
            "activity": {
              "ref": "#log",
              "input": {
                "message": "blaat",
                "addDetails": false,
                "usePrint": false
              }
            }
          }
        ]
      }
    }
  ]
}