{
  "name": "LogPathFlow",
  "type": "flogo:app",
  "version": "0.0.1",
  "triggers": [
    {
      "id": "http_trigger",
      "ref": "github.com/project-flogo/contrib/trigger/rest",
      "settings": {
        "port": "9999"
      },
      "handlers": [
        {
          "settings": {
            "method": "GET",
            "path": "/{path:*}"
          },
          "actions": [
            {
              "ref": "#flow",
              "settings": {
                "flowURI": "res://flow:main"
              }
            }
          ]
        }
      ]
    }
  ],
  "resources": [
    {
      "id": "flow:main",
      "data": {
        "name": "MainFlow",
        "metadata": {
          "input": [
            { "name": "params", "type": "any" }
          ],
          "output": []
        },
        "tasks": [
          {
            "id": "check_path",
            "name": "CheckPath",
            "activity": {
              "ref": "github.com/project-flogo/contrib/activity/mapper",
              "input": {
                "mappings": [
                  {
                    "type": "expression",
                    "value": "=$.params.path",
                    "mapTo": "path"
                  }
                ]
              }
            }
          },
          {
            "id": "log_hi",
            "name": "LogHi",
            "activity": {
              "ref": "github.com/project-flogo/contrib/activity/log",
              "input": {
                "message": "hi"
              }
            },
            "conditions": {
              "expr": "$.params.path == \"log\""
            }
          },
          {
            "id": "log_bye",
            "name": "LogBye",
            "activity": {
              "ref": "github.com/project-flogo/contrib/activity/log",
              "input": {
                "message": "bye"
              }
            },
            "conditions": {
              "expr": "$.params.path != \"log\""
            }
          }
        ]
      }
    }
  ]
}
